<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/shape_boder_flat">

        <ImageView
            android:id="@+id/img_coin_rec_md_home"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/shape_oval_coin"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_name_coin_md_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@color/light_on_box"
            android:text="Bitcoin"
            android:textColor="@color/text_primary_dark"
            android:textSize="@dimen/textStyleMedium"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/img_coin_rec_md_home"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_plus_or_down_rec_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:background="@color/light_on_box"
            android:textColor="@color/greenColor"
            android:textSize="@dimen/textStyleSmall"
            app:layout_constraintBottom_toBottomOf="@+id/txt_percent_rec_md_home"
            app:layout_constraintEnd_toStartOf="@+id/txt_percent_rec_md_home"
            app:layout_constraintTop_toTopOf="@+id/txt_percent_rec_md_home"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_percent_rec_md_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.5%"
            android:background="@color/light_on_box"
            android:textColor="@color/greenColor"
            android:textSize="@dimen/textStyleSmall"
            app:layout_constraintEnd_toEndOf="@+id/txt_price_watchlist_md_home"
            app:layout_constraintTop_toBottomOf="@+id/txt_price_watchlist_md_home" />

        <TextView
            android:id="@+id/txt_price_watchlist_md_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$102,000.10"
            android:background="@color/light_on_box"
            android:textColor="@color/text_primary_dark"
            android:textSize="@dimen/textStyleMedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_name_coin_md_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC"
            android:background="@color/light_on_box"
            android:textColor="@color/text_secondary_dark"
            android:textSize="@dimen/textStyleSmall"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/txt_name_coin_md_rec"
            app:layout_constraintTop_toBottomOf="@+id/txt_name_coin_md_rec" />
</androidx.constraintlayout.widget.ConstraintLayout>
