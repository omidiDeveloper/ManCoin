<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="4dp"
    android:layout_width="match_parent"
    android:background="@drawable/shape_whatchlist"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/img_item_recycler_news"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_title_news_md_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:background="@color/light_on_box"
        android:text="Title Of News"
        android:textColor="@color/text_primary_dark"
        android:textSize="@dimen/textStyleMedium"
        android:maxLength="20"
        app:layout_constraintStart_toEndOf="@+id/img_item_recycler_news"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_description_item_recycler_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/light_on_box"
        android:ellipsize="end"
        android:ems="15"
        android:maxEms="15"
        android:textSize="@dimen/textStyleSmall"
        android:maxLines="3"
        android:layout_marginStart="12dp"
        android:text="this is a test for ManCoin App and this is nothing have to be improve and just is a test for show"
        app:layout_constraintStart_toEndOf="@+id/img_item_recycler_news"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_news_md_news" />

</androidx.constraintlayout.widget.ConstraintLayout>