<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="12dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_whatchlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="@color/light_on_box"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="About"
            android:textColor="@color/text_primary_dark"
            android:textSize="@dimen/textStyleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:gravity="start"
            android:weightSum="2"
            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"
            android:background="@color/light_on_box"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight=".5"
                android:textColor="@color/text_secondary_dark"
                android:textSize="@dimen/textStyleMedium"
                android:background="@color/light_on_box"
                android:text="Website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_website_url_md_about"
                android:layout_weight="1.5"
                android:layout_marginEnd="12dp"
                android:gravity="start"
                android:text="N/A"
                android:textSize="@dimen/textStyleMedium"
                android:textColor="@color/text_primary_dark"
                android:background="@color/light_on_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="start"
            android:weightSum="2"
            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"
            android:background="@color/light_on_box"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight=".5"
                android:textColor="@color/text_secondary_dark"
                android:textSize="@dimen/textStyleMedium"
                android:background="@color/light_on_box"
                android:text="Twitter  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_twitter_url_md_about"
                android:layout_weight="1.5"
                android:layout_marginEnd="12dp"
                android:gravity="start"
                android:text="N/A"
                android:textSize="@dimen/textStyleMedium"
                android:textColor="@color/text_primary_dark"
                android:background="@color/light_on_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="start"
            android:weightSum="2"
            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"
            android:background="@color/light_on_box"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight=".5"
                android:textColor="@color/text_secondary_dark"
                android:textSize="@dimen/textStyleMedium"
                android:background="@color/light_on_box"
                android:text="Reddit   "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_reddit_url_md_about"
                android:layout_weight="1.5"
                android:layout_marginEnd="12dp"
                android:gravity="start"
                android:text="N/A"
                android:textSize="@dimen/textStyleMedium"
                android:textColor="@color/text_primary_dark"
                android:background="@color/light_on_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="start"
            android:weightSum="2"
            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"
            android:background="@color/light_on_box"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight=".5"
                android:textColor="@color/text_secondary_dark"
                android:textSize="@dimen/textStyleMedium"
                android:background="@color/light_on_box"
                android:text="Github   "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_Github_url_md_about"
                android:layout_weight="1.5"
                android:layout_marginEnd="12dp"
                android:gravity="start"
                android:text="N/A"
                android:textSize="@dimen/textStyleMedium"
                android:textColor="@color/text_primary_dark"
                android:background="@color/light_on_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_marginBottom="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/text_secondary_dark"/>

        <TextView
            android:id="@+id/txt_some_more_md_chart"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/text_primary_dark"
            android:background="@color/light_on_box"
            android:textSize="@dimen/textStyleMedium"
            android:text="Some Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>