<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:background="@drawable/shape_whatchlist"
    android:padding="12dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="95dp" />

    <TextView
        android:id="@+id/txt_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_on_box"
        android:text="About"
        android:textStyle="bold"
        android:textColor="@color/text_primary_dark"
        android:textSize="@dimen/textStyleMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/light_on_box"
        android:text="Website"
        android:textColor="@color/text_secondary_dark"
        android:textSize="@dimen/textStyleMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_about" />

    <TextView
        android:id="@+id/txt_twitter"
        android:layout_weight=".5"
        android:textColor="@color/text_secondary_dark"
        android:textSize="@dimen/textStyleMedium"
        android:background="@color/light_on_box"
        android:text="Twitter"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/txt_website"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/txt_reddit"
        android:textColor="@color/text_secondary_dark"
        android:textSize="@dimen/textStyleMedium"
        android:background="@color/light_on_box"
        android:text="Reddit"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_github"
        android:textColor="@color/text_secondary_dark"
        android:textSize="@dimen/textStyleMedium"
        android:background="@color/light_on_box"
        android:text="Github"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_reddit"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- here is for links -->

    <TextView
        android:id="@+id/txt_website_url_md_about"
        android:text="N/A"
        android:textSize="@dimen/textStyleMedium"
        android:ellipsize="end"
        android:maxLength="20"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/txt_website"
        android:textColor="@color/text_primary_dark"
        android:background="@color/light_on_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_twitter_url_md_about"
        android:text="N/A"
        android:textSize="@dimen/textStyleMedium"
        android:ellipsize="end"
        android:maxLength="20"
        app:layout_constraintTop_toTopOf="@id/txt_twitter"
        app:layout_constraintStart_toStartOf="@id/guideline"
        android:textColor="@color/text_primary_dark"
        android:background="@color/light_on_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_reddit_url_md_about"
        android:text="N/A"
        android:textSize="@dimen/textStyleMedium"
        android:ellipsize="end"
        android:maxLength="20"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/txt_reddit"
        android:textColor="@color/text_primary_dark"
        android:background="@color/light_on_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_Github_url_md_about"
        android:text="N/A"
        android:textSize="@dimen/textStyleMedium"
        android:ellipsize="end"
        android:maxLength="20"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/txt_github"
        android:textColor="@color/text_primary_dark"
        android:background="@color/light_on_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/txt_desc"
        android:layout_marginTop="32dp"
        android:text="Description"
        android:textSize="@dimen/textStyleMedium"
        android:textColor="@color/text_primary_dark"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txt_github"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/light_on_box"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_some_more_md_chart"
        android:textColor="@color/text_secondary_dark"
        android:background="@color/light_on_box"
        android:textSize="@dimen/textStyleMedium"
        app:layout_constraintTop_toBottomOf="@id/txt_desc"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:text="Have Not Description to show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>