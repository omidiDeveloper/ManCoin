<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="12dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_whatchlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="@color/light_on_box"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="Stats"
            android:textColor="@color/text_primary_dark"
            android:textSize="@dimen/textStyleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:gravity="start"
            android:weightSum="2"
            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"
            android:background="@color/light_on_box"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:textColor="@color/text_secondary_dark"
                android:textSize="@dimen/textStyleMedium"
                android:background="@color/light_on_box"
                android:text="Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_price_md_stats"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:gravity="end"
                android:text="$ 104,333"
                android:textSize="@dimen/textStyleMedium"
                android:textColor="@color/text_primary_dark"
                android:background="@color/light_on_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="start"
            android:weightSum="2"
            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"
            android:background="@color/light_on_box"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:textColor="@color/text_secondary_dark"
                android:textSize="@dimen/textStyleMedium"
                android:background="@color/light_on_box"
                android:text="Market Cap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_marketcap_md_stats"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:gravity="end"
                android:text="$121 B"
                android:textSize="@dimen/textStyleMedium"
                android:textStyle="bold"
                android:textColor="@color/text_primary_dark"
                android:background="@color/light_on_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="start"
            android:weightSum="2"
            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"
            android:background="@color/light_on_box"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:textColor="@color/text_secondary_dark"
                android:textSize="@dimen/textStyleMedium"
                android:background="@color/light_on_box"
                android:text="24H Volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_change_24h_md_stats"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:gravity="end"
                android:text="+ 14%"
                android:textSize="@dimen/textStyleMedium"
                android:textColor="@color/text_primary_dark"
                android:background="@color/light_on_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="start"
            android:weightSum="2"
            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"
            android:background="@color/light_on_box"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:textColor="@color/text_secondary_dark"
                android:textSize="@dimen/textStyleMedium"
                android:background="@color/light_on_box"
                android:text="Circulating Supply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_circulating_supply_md_stats"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:gravity="end"
                android:text="30 B"
                android:textSize="@dimen/textStyleMedium"
                android:textStyle="bold"
                android:textColor="@color/text_primary_dark"
                android:background="@color/light_on_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="start"
            android:weightSum="2"
            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"
            android:background="@color/light_on_box"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:textColor="@color/text_secondary_dark"
                android:textSize="@dimen/textStyleMedium"
                android:background="@color/light_on_box"
                android:text="Algorithm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:gravity="end"
                android:text="SHA-256"
                android:textSize="@dimen/textStyleMedium"
                android:textColor="@color/text_secondary_dark"
                android:background="@color/light_on_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="start"
            android:weightSum="2"
            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"
            android:background="@color/light_on_box"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:textColor="@color/text_secondary_dark"
                android:textSize="@dimen/textStyleMedium"
                android:background="@color/light_on_box"
                android:text="Lowday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_lowday_md_stats"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:gravity="end"
                android:text="$ 90,000"
                android:textSize="@dimen/textStyleMedium"
                android:textColor="@color/text_primary_dark"
                android:background="@color/light_on_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="start"
            android:weightSum="2"
            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"
            android:background="@color/light_on_box"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:textColor="@color/text_secondary_dark"
                android:textSize="@dimen/textStyleMedium"
                android:background="@color/light_on_box"
                android:text="Highday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_highday_md_stats"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:gravity="end"
                android:text="$ 107,219"
                android:textSize="@dimen/textStyleMedium"
                android:textColor="@color/text_primary_dark"
                android:background="@color/light_on_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_marginBottom="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/text_secondary_dark"/>

    </LinearLayout>

</LinearLayout>